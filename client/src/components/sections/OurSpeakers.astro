---
import fetchApi from "../../lib/strapi";

const highlight = await fetchApi({
  endpoint: "highlight",
  wrappedByKey: "data",
  query: {
    populate: ["speakers", "speakers.image", "speakers.image.formats"],
  },
});
---

<div class="our_speakers">
  <h2 class="our_speakers_title">Onze Sprekers</h2>
  <div class="speakers" id="foto-container">
    {
      //   <h2>{speaker.attributes.naam}</h2>

      highlight.attributes.speakers.data.map((speaker) => (
        <a href={`${import.meta.env.BASE_URL}./speakers/${speaker.id}`}>
          <img
            class="img"
            src={
              import.meta.env.STRAPI_URL +
              speaker.attributes.image.data.attributes.formats.small.url
            }
            alt="highlight"
          />
        </a>
      ))
    }
  </div>

  <div class="buttons">
    <a href="/speakers" class="btn btn--white">alle spekers</a>
  </div>
</div>

<style>
  .speakers {
    display: flex;
    justify-content: center;
    gap: 50px;
  }

  .our_speakers_title {
    font-family: "alphaLyrae";
    color: #d9d9d9;
    font-size: 100px;

    display: flex;
    justify-content: center;
    margin-top: 100px;
    margin-bottom: 100px;
  }

  .img {
    width: 100%;
    height: 100%;
  }

  .our_speakers {
    background-color: #1f1f1f;
    padding-top: 100px;
    padding-bottom: 100px;
  }

  .buttons {
    display: flex;
    justify-content: center;

    margin-top: 70px;
  }

  .btn {
    font-size: 20px;
    color: #d9d9d9;
    border: 1px solid #d9d9d9;
    padding: 1rem 5rem;
    text-decoration: none;
    border-radius: 30px;

    margin-top: 2rem;
  }

  .btn--white {
    background-color: #b33bd5;
    color: white;
    border: 0;
  }

  .btn:hover {
    background-color: #d9d9d9;
    color: #000;
  }

  .foto-container {
    position: relative;
    width: 300px; /* Pas dit aan naar de gewenste grootte van je afbeeldingen */
    overflow: hidden;
  }

  img {
    transition: transform 0.3s ease;
  }

  img:hover {
    transform: scale(1.1);
  }
</style>
