---
import img1 from "../../assets/img/Bdsvs.png";
---

<div class="lastDay_Wrapper">
  <a href={`${import.meta.env.BASE_URL}/e-sport/`}>
    <img src={img1.src} alt="" />
  </a>
</div>

<style>
  .lastDay_Wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

    padding-bottom: 3rem;
  }

  img {
    width: 950px;
    height: 320px;
    object-fit: cover;
    border-radius: 10px;
  }

  @media (max-width: 1024px) {
    img {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 768px) {
    img {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 425px) {
    img {
      width: 100%;
      height: 100%;
    }
  }
</style>
