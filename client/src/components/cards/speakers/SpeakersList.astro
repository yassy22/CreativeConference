---
import SpeakersCard from "./SpeakersCard.astro";

const { speakers, showCategory} = Astro.props;

---
<div class="test">


<ul class="speaker">
  {
    speakers.map((speaker) => (
      <li data-category={speaker.attributes.category?.data.attributes.naam}>
        <a href={`/speakers/${speaker.id}`}>
          <SpeakersCard
            speaker={speaker}
            showCategory={showCategory}
          />
        </a>
      </li>
    ))
  }
</ul>

</div>

<style>
  .speaker {
   display: flex;
   justify-content: center;
   
  }

  li {
    list-style: none;
    width: 30%;
    margin-bottom: 2rem;

  
  }

 .test {
   background-color: red;
  
 }
</style>
