---
const { players, showCategory } = Astro.props;
---

<div class="player_wrapper">
  {
    players.map((player) => (
      <li data-rol={player.attributes.rol?.data.attributes.name}>
        <a href={`${import.meta.env.BASE_URL}/players/${player.id}`}>
          <h3>{player.attributes.name}</h3>

          <img
            src={
              import.meta.env.STRAPI_URL +
              player.attributes.image.data[0].attributes.formats.small.url
            }
            alt="player"
          />
        </a>
      </li>
    ))
  }
</div>

<style>
  .player_wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-evenly;
    margin: 0;
    padding-bottom: 5rem;
    padding-top: 2rem;
  }

  li {
    width: 300px;
    height: 310px;
    margin: 10px;
    list-style: none;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }

  li a {
    text-decoration: none;
    color: #000;
  }

  li a:hover {
    text-decoration: underline;
  }

  li img {
    width: 260px;
    height: 310px;
    object-fit: cover;
    border-radius: 4px;
  }

  li h3 {
    margin: 0;
    padding: 10px;
    background: #000000a6;
    color: #fff;
    text-align: center;
    font-family: "lato";
  }

  @media (max-width: 1440px) {
    li {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 1024px) {
    li {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 768px) {
    li {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 425px) {
    li {
      width: 100%;
      height: 100%;
    }
  }

  @media (max-width: 375px) {
    li {
      width: 100%;
      height: 100%;
    }
  }
</style>
