---
const { players, showCategory } = Astro.props;

---

<div>
  {
    players.map((player) => (
      <li data-group={player.attributes.group?.data.attributes.name} data-rol={player.attributes.rol?.data.attributes.name} >
        <a href={`${import.meta.env.BASE_URL}./players/${player.id}`}>
          <h1>{player.attributes.name}</h1>
          <img
            src={
              import.meta.env.STRAPI_URL +
              player.attributes.image.data[0].attributes.formats.small.url
            }
            alt="player"
          />
        </a>
      </li>
    ))
  }
</div> 







<style>
  div {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
  }

  li {
    list-style: none;
    margin: 1rem;
    padding: 1rem;
    width: 300px;
    height: 350px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  li a {
    text-decoration: none;
    color: #000;
  }

  li a:hover {
    text-decoration: underline;
  }

  li img {
    width: 260px;
    height: 310px;
    object-fit: cover;
    border-radius: 4px;
  }


  @media (max-width: 768px) {
    li {
      width: 100%;
      height: 100%;
    }
  }




</style>
