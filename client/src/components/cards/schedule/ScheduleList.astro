<div class="content">
  {
    schedule.map((player) => (
      <div class="container_wrapper">
        <div class="info">
          <p class="dag">{player.attributes.dag}</p>
          <h1 class="naam">{player.attributes.naam}</h1>
          <p class="date">{player.attributes.date}</p>
          <h2 class="price">{player.attributes.Price} â‚¬ euros</h2>
          <div class="buttons">
            <a
              href={`${import.meta.env.BASE_URL}/speakers/`}
              class=" btn--white"
            >
              register
            </a>
            <a
              href={`${import.meta.env.BASE_URL}/speakers/${player.id}`}
              class="btn"
            >
              about speaker
            </a>
          </div>
        </div>
        <div>
          <img
            src={
              import.meta.env.STRAPI_URL +
              player.attributes.image?.data.attributes.formats.small.url
            }
            alt={player.attributes.title}
          />
        </div>
      </div>
    ))
  }
</div>

