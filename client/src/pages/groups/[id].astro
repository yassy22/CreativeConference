---

import fetchApi from "../../lib/strapi";
import GroupsLayout from "../../layouts/GroupsLayout.astro";

import Layout from "../../layouts/Layout.astro";
import PlayersList from "../../components/cards/players/PlayersList.astro";
import PlayerCard from "../../components/cards/players/PlayerCard.astro";



export async function getStaticPaths() {
  const groups = await fetchApi({
    endpoint: "groups",
    wrappedByKey: "data",
    query: {
        populate:[ "*"], },
  });

  const paths = groups.map((group, i) => ({
    params: { id: group.id.toString() },
    props: {
        group,
    },
  }));

  return paths;

  
}

const { group } = Astro.props;

---


<Layout>
   


<GroupsLayout groupi={group}>
  <PlayerCard />

  <Layout />


