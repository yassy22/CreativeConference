---
import Layout from "../layouts/Layout.astro";
import PlayerCard from "../components/cards/players/PlayerCard.astro";

import PlayersList from "../components/cards/players/PlayersList.astro";
import GroupsLayout from "../layouts/GroupsLayout.astro";

import Filter from "../components/filters/Filter.astro";

import fetchApi from "../lib/strapi";

const players = await fetchApi({
  endpoint: "players",
  wrappedByKey: "data",
  query: { populate: ["players", "group", "rol", "image"] },
});

const groups = await fetchApi({
  endpoint: "groups",
  wrappedByKey: "data",
});


---

<Layout>
  <PlayersList players={players} showCategory={false} />
</Layout>
